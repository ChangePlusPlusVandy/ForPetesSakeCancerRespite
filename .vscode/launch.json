{
	"version": "0.2.0",
	"configurations": [
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "nodemon",
			"program": "${workspaceFolder}/backend/src/index.ts",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "nodemon",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"type": "node-terminal",
			"name": "Run Script: start",
			"request": "launch",
			"command": "npm run start",
			"cwd": "${workspaceFolder}/backend"
		}
	]
}